                padding: 1rem;
            }

            .testimonial-content p {
                font-size: 1rem;
            }

            .quote-text {
                font-size: 1.125rem;
            }

            .stat-card {
                padding: 1.5rem 1rem;
            }

            .stat-card .stat-number {
                font-size: 1.5rem;
            }

            .cta-content h2 {
                font-size: 2rem;
            }

            .btn {
                padding: 0.875rem 1.5rem;
                font-size: 1rem;
            }
        }
    </style>
