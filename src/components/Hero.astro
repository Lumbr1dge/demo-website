---
import Footer from './Footer.astro';
import CTA from './CTA.astro';

interface Props {
    title?: string;
    description?: string;
}

interface Review {
    author: string;
    project: string;
    location: string;
    text: string;
    keywords: string[];
    rating: number;
}

const reviews: Review[] = [
    {
        author: "Sarah Mitchell",
        project: "Complete Home Renovation",
        location: "Auckland Central",
        text: "Working with Draft & Build was an **absolutely incredible experience**. From the initial consultation to the final walkthrough, their **attention to detail** was unmatched. The team transformed our 1970s home into a **modern masterpiece** while respecting the original character. Every deadline was met, and they handled unexpected challenges with **professional expertise**.",
        keywords: ["Professional", "Detailed", "Reliable"],
        rating: 5
    },
    {
        author: "Michael Chen",
        project: "Custom Deck & Outdoor Living",
        location: "Devonport",
        text: "I've worked with many contractors, but Draft & Build stands out for their **exceptional craftsmanship**. Our new deck and outdoor entertainment area exceeded all expectations. The **quality of materials** and **precise construction** is evident in every detail. They completed the project **on time and within budget**.",
        keywords: ["Quality", "Craftsmanship", "Punctual"],
        rating: 5
    },
    {
        author: "Emma Thompson",
        project: "New House Construction",
        location: "Westmere",
        text: "Building our dream home felt overwhelming until we met the Draft & Build team. Their **clear communication** and **transparent process** made everything seamless. The **innovative design solutions** they proposed saved us money while enhancing functionality. Couldn't be happier with our **beautiful new home**.",
        keywords: ["Communication", "Innovative", "Seamless"],
        rating: 5
    },
    {
        author: "David Rodriguez",
        project: "Kitchen & Bathroom Renovation",
        location: "Grey Lynn",
        text: "The transformation of our kitchen and bathroom is **simply stunning**. Draft & Build's team showed **incredible skill** in maximizing our small spaces. Their **problem-solving abilities** and **creative approach** turned challenging layouts into **functional masterpieces**. Highly recommend their expertise.",
        keywords: ["Creative", "Skilled", "Functional"],
        rating: 5
    },
    {
        author: "Lisa Johnson",
        project: "Outdoor Structure & Landscaping",
        location: "Mount Eden",
        text: "Our backyard renovation project was handled with **outstanding professionalism**. The custom pergola and retaining walls are **built to last** with **premium materials**. The team's **flexibility** and willingness to accommodate our changing needs throughout the project was **truly exceptional**.",
        keywords: ["Professional", "Premium", "Flexible"],
        rating: 5
    },
    {
        author: "Mark Williams",
        project: "House Extension & Renovation",
        location: "Ponsonby",
        text: "The team delivered **beyond our expectations**. The house extension blends perfectly with our existing structure, and the **workmanship quality** is superb. Their **honest pricing** and **no-surprises approach** made the entire process stress-free. **Five stars** all the way!",
        keywords: ["Honest", "Quality", "Stress-free"],
        rating: 5
    }
];

const { 
    title = "From Plans to Perfection", 
    description = "Licensed builders specialising in renovations, new builds, and custom projects. No stress, no surprisesâ€”just quality results." 
} = Astro.props;
---

<div class="relative min-h-screen bg-gradient-to-br from-white via-gray-50/30 to-white overflow-hidden">
    {/* Background Pattern */}
    <div class="absolute inset-0">
        <div class="absolute top-10 left-1/4 w-72 h-72 bg-[#004225]/3 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-10 right-1/4 w-96 h-96 bg-[#004225]/5 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    </div>

    {/* Left Side Decoration */}
    <div class="absolute left-0 top-0 bottom-0 w-[10%] z-10">
        <div class="sticky top-0 h-screen w-full">
            <div class="animate-fade-line absolute top-[15%] w-full h-[2px] bg-gradient-to-r from-[#004225]/40 via-[#004225]/20 to-transparent rounded-full"></div>
            <div class="animate-fade-line absolute top-[35%] w-full h-[2px] bg-gradient-to-r from-[#004225]/40 via-[#004225]/20 to-transparent rounded-full" style="animation-delay: 1s;"></div>
            <div class="animate-fade-line absolute top-[55%] w-full h-[2px] bg-gradient-to-r from-[#004225]/40 via-[#004225]/20 to-transparent rounded-full" style="animation-delay: 2s;"></div>
            <div class="animate-fade-line absolute top-[75%] w-full h-[2px] bg-gradient-to-r from-[#004225]/40 via-[#004225]/20 to-transparent rounded-full" style="animation-delay: 3s;"></div>
            <div class="animate-fade-line absolute top-[95%] w-full h-[2px] bg-gradient-to-r from-[#004225]/40 via-[#004225]/20 to-transparent rounded-full" style="animation-delay: 4s;"></div>
        </div>
    </div>

    {/* Right Side Decoration */}
    <div class="absolute right-0 top-0 bottom-0 w-[10%] z-10">
        <div class="sticky top-0 h-screen w-full">
            <div class="animate-fade-line absolute top-[25%] w-full h-[2px] bg-gradient-to-l from-[#004225]/40 via-[#004225]/20 to-transparent rounded-full" style="animation-delay: 0.5s;"></div>
            <div class="animate-fade-line absolute top-[45%] w-full h-[2px] bg-gradient-to-l from-[#004225]/40 via-[#004225]/20 to-transparent rounded-full" style="animation-delay: 1.5s;"></div>
            <div class="animate-fade-line absolute top-[65%] w-full h-[2px] bg-gradient-to-l from-[#004225]/40 via-[#004225]/20 to-transparent rounded-full" style="animation-delay: 2.5s;"></div>
            <div class="animate-fade-line absolute top-[85%] w-full h-[2px] bg-gradient-to-l from-[#004225]/40 via-[#004225]/20 to-transparent rounded-full" style="animation-delay: 3.5s;"></div>
        </div>
    </div>

    {/* Main Content */}
    <div class="mx-[5%] sm:mx-[10%] px-4 sm:px-0">
        <section class="relative min-h-[70vh] flex items-center opacity-0 animate-fade-in z-20 pt-16 sm:pt-20 lg:pt-28">
            <div class="relative z-10 max-w-[1400px] mx-auto">
                <div class="grid lg:grid-cols-2 gap-8 lg:gap-16 items-center">
                    {/* Left content */}
                    <div class="space-y-8 lg:space-y-10 animate-slide-in-left text-center lg:text-left">
                        {/* Enhanced badge */}
                        <div class="inline-flex items-center gap-3 px-5 py-3 bg-gradient-to-r from-[#004225]/8 to-[#004225]/5 rounded-full border border-[#004225]/20 shadow-lg shadow-[#004225]/10 backdrop-blur-sm">
                            <span class="flex h-3 w-3">
                                <span class="animate-ping absolute inline-flex h-3 w-3 rounded-full bg-[#004225] opacity-75"></span>
                                <span class="relative inline-flex rounded-full h-3 w-3 bg-[#004225] shadow-lg"></span>
                            </span>
                            <span class="text-black text-sm sm:text-base font-semibold tracking-wide">Licensed Building Practitioners [LBP]</span>
                        </div>

                        {/* Enhanced heading */}
                        <div class="relative">
                            <h1 class="text-4xl sm:text-5xl lg:text-7xl xl:text-8xl font-black leading-[0.9]">
                                <span class="block text-gray-900 drop-shadow-sm">From Plans</span>
                                <span class="block mt-3 text-transparent bg-clip-text bg-gradient-to-r from-[#004225] via-[#006837] to-[#004225] drop-shadow-lg animate-gradient">to Perfection</span>
                            </h1>
                            {/* Subtle accent line */}
                            <div class="absolute -bottom-4 left-1/2 transform -translate-x-1/2 lg:left-0 lg:transform-none w-24 h-1 bg-gradient-to-r from-[#004225] to-transparent rounded-full"></div>
                        </div>

                        {/* Description */}
                        <p class="text-lg sm:text-xl lg:text-2xl text-gray-700 max-w-2xl mx-auto lg:mx-0 leading-relaxed font-light tracking-wide">
                            {description}
                        </p>

                        {/* CTAs */}
                        <div class="flex flex-col sm:flex-row gap-6 justify-center lg:justify-start">
                            <a href="/contact" 
                                class="group relative px-8 py-5 bg-gradient-to-r from-[#004225] to-[#006837] text-white rounded-2xl 
                                hover:from-[#006837] hover:to-[#004225] transition-all duration-500 
                                flex items-center justify-center text-lg font-semibold shadow-2xl shadow-[#004225]/30
                                hover:shadow-3xl hover:shadow-[#004225]/40 hover:-translate-y-1 transform-gpu
                                border border-[#004225]/20 overflow-hidden">
                                {/* Shimmer effect */}
                                <div class="absolute inset-0 -top-10 -left-10 bg-gradient-to-r from-transparent via-white/20 to-transparent w-6 h-full rotate-12 group-hover:animate-shimmer"></div>
                                Contact Us
                                <svg class="w-6 h-6 ml-3 group-hover:translate-x-2 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                                </svg>
                            </a>
                            <a href="/gallery" 
                                class="group px-8 py-5 bg-white/80 backdrop-blur-sm text-[#004225] rounded-2xl 
                                hover:bg-[#004225]/5 transition-all duration-300 
                                flex items-center justify-center text-lg font-semibold
                                border-2 border-[#004225]/30 hover:border-[#004225] shadow-xl shadow-gray-200/50
                                hover:shadow-2xl hover:shadow-[#004225]/20 hover:-translate-y-1 transform-gpu">
                                View Our Work
                                <svg class="w-6 h-6 ml-3 group-hover:translate-x-2 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                </svg>
                            </a>
                        </div>

                        {/* Stats */}
                        <div class="grid grid-cols-3 gap-6 pt-10 mt-12 border-t-2 border-gradient border-[#004225]/20">
                            <div class="text-center lg:text-left group">
                                <div class="text-2xl sm:text-3xl lg:text-4xl font-black text-[#004225] mb-2 group-hover:scale-110 transition-transform duration-300">13+</div>
                                <div class="text-sm sm:text-base text-gray-600 font-medium tracking-wide">Years Experience</div>
                            </div>
                            <div class="text-center group">
                                <div class="text-2xl sm:text-3xl lg:text-4xl font-black text-[#004225] mb-2 group-hover:scale-110 transition-transform duration-300">50+</div>
                                <div class="text-sm sm:text-base text-gray-600 font-medium tracking-wide">Projects Done</div>
                            </div>
                            <div class="text-center lg:text-right group">
                                <div class="text-2xl sm:text-3xl lg:text-4xl font-black text-[#004225] mb-2 group-hover:scale-110 transition-transform duration-300">LBP</div>
                                <div class="text-sm sm:text-base text-gray-600 font-medium tracking-wide">Certified</div>
                            </div>
                        </div>
                    </div>

                    {/* Right content - Image */}
                    <div class="relative w-full animate-slide-in-right">
                        {/* Background glow */}
                        <div class="absolute inset-4 bg-gradient-to-br from-[#004225]/10 to-[#006837]/5 rounded-3xl blur-2xl"></div>
                        
                        {/* Main image container */}
                        <div class="relative w-full h-[350px] sm:h-[450px] lg:h-[550px] rounded-3xl overflow-hidden shadow-2xl shadow-black/20 border-4 border-white/50 backdrop-blur-sm group hover:scale-105 transition-all duration-700 transform-gpu cursor-pointer">
                            <img 
                                src="/Hero-section-1.jpg"
                                alt="Quality Building Project"
                                class="w-full h-full object-cover object-center group-hover:scale-110 transition-transform duration-700"
                                loading="eager"
                            />
                            {/* Enhanced overlay */}
                            <div class="absolute inset-0 bg-gradient-to-br from-transparent via-black/5 to-black/30"></div>
                            <div class="absolute inset-0 bg-gradient-to-t from-[#004225]/20 to-transparent"></div>
                            
                            {/* Interactive floating elements */}
                            <div class="absolute top-4 left-4 group-hover:scale-125 transition-transform duration-500">
                                <div class="w-3 h-3 bg-blue-400/80 rounded-full animate-pulse shadow-lg shadow-blue-400/50"></div>
                                <div class="absolute -inset-2 bg-blue-400/20 rounded-full animate-ping"></div>
                            </div>
                            <div class="absolute top-12 right-6 group-hover:scale-110 transition-transform duration-700" style="animation-delay: 0.2s;">
                                <div class="w-2 h-2 bg-green-400/80 rounded-full animate-pulse shadow-lg shadow-green-400/50" style="animation-delay: 1s;"></div>
                                <div class="absolute -inset-1 bg-green-400/20 rounded-full animate-ping" style="animation-delay: 1s;"></div>
                            </div>
                            <div class="absolute bottom-12 left-6 group-hover:scale-150 transition-transform duration-600" style="animation-delay: 0.4s;">
                                <div class="w-4 h-4 bg-white/70 rounded-full animate-pulse shadow-lg shadow-white/50" style="animation-delay: 2s;"></div>
                                <div class="absolute -inset-2 bg-white/20 rounded-full animate-ping" style="animation-delay: 2s;"></div>
                            </div>
                            
                            {/* Interactive corner accents */}
                            <div class="absolute top-0 right-0 w-16 h-16 opacity-0 group-hover:opacity-100 transition-opacity duration-700">
                                <div class="absolute top-2 right-2 w-[2px] h-8 bg-white/60 rotate-45 animate-pulse"></div>
                                <div class="absolute top-2 right-2 h-[2px] w-8 bg-white/60 rotate-45 animate-pulse"></div>
                            </div>
                            
                            {/* Content overlay */}
                            <div class="absolute bottom-0 left-0 right-0 p-6 pb-8 bg-gradient-to-t from-black/80 to-transparent text-white opacity-0 group-hover:opacity-100 transition-all duration-500">
                                <div class="transform translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
                                    <h3 class="text-xl font-bold mb-2">Quality Construction</h3>
                                    <p class="text-sm text-white/90 mb-3 leading-relaxed">Building your dreams with premium materials and expert craftsmanship</p>
                                    <div class="flex items-center gap-2 text-xs text-white/80 flex-wrap">
                                        <span class="px-2 py-1 bg-white/20 rounded-full">Expert Building</span>
                                        <span class="px-2 py-1 bg-white/20 rounded-full">LBP Certified</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {/* Decorative elements */}
                        <div class="absolute -top-6 -right-6 w-24 h-24 bg-gradient-to-br from-[#004225]/20 to-transparent rounded-full blur-xl animate-pulse"></div>
                        <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-gradient-to-tr from-[#006837]/15 to-transparent rounded-full blur-xl animate-pulse" style="animation-delay: 1.5s;"></div>

                        {/* Enhanced floating card */}
                        <div class="absolute -bottom-6 -right-10 bg-white/95 backdrop-blur-sm rounded-2xl p-5 shadow-2xl shadow-black/10 border-2 border-[#004225]/20 hover:border-[#004225]/40 animate-float group-hover:scale-105 transition-all duration-500 hover:shadow-3xl hover:shadow-[#004225]/30">
                            <div class="flex items-center gap-4">
                                <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center group-hover:from-blue-600 group-hover:to-blue-700 transition-all duration-300">
                                    <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M10 3v4h4V3m-4 4h4m-4 0H6m8 0h4"/>
                                    </svg>
                                </div>
                                <div>
                                    <div class="text-sm font-bold text-gray-900 mb-1">Premium Building</div>
                                    <div class="text-xs text-gray-500 mb-2">Construction Experts</div>
                                    <div class="flex items-center gap-1 text-yellow-500">
                                        {[...Array(5)].map(() => (
                                            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                            </svg>
                                        ))}
                                    </div>
                                </div>
                            </div>
                            {/* Subtle glow effect */}
                            <div class="absolute inset-0 bg-gradient-to-r from-blue-500/10 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        {/* Divider */}
        <div class="w-full py-8 bg-white scroll-animate-up opacity-0">
            <div class="max-w-[1400px] mx-auto px-4">
                <div class="flex items-center justify-center">
                    <div class="h-[1px] w-full bg-gradient-to-r from-transparent via-[#004225]/30 to-transparent"></div>
                </div>
            </div>
        </div>

        {/* Enhanced Services Section - Redesigned */}
        <section class="relative py-20 overflow-hidden">
            {/* Background */}
            <div class="absolute inset-0 bg-gradient-to-br from-gray-50 via-white to-blue-50/20"></div>
            <div class="absolute top-0 left-1/4 w-96 h-96 bg-[#004225]/5 rounded-full blur-3xl animate-pulse"></div>
            <div class="absolute bottom-0 right-1/4 w-80 h-80 bg-blue-500/5 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
            
            <div class="relative z-10 max-w-7xl mx-auto px-4 md:px-6">
                {/* Header */}
                <div class="text-center mb-20 scroll-animate-up opacity-0">
                    <div class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-[#004225]/10 to-blue-500/10 rounded-full mb-6 shadow-lg backdrop-blur-sm border border-white/50">
                        <span class="w-2 h-2 bg-gradient-to-r from-[#004225] to-blue-500 rounded-full animate-pulse"></span>
                        <span class="text-sm font-bold text-[#004225] uppercase tracking-wider">Our Expertise</span>
                    </div>
                    <h2 class="text-4xl md:text-5xl lg:text-6xl font-black mb-6 text-gray-900">
                        <span class="hover:scale-105 transition-transform duration-300 inline-block">Services</span> We
                        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-[#004225] via-blue-500 to-[#006837]">
                            Provide
                        </span>
                    </h2>
                    <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
                        From concept to completion, we deliver exceptional building solutions tailored to your vision and needs.
                    </p>
                </div>

                {/* Services Grid */}
                <div class="grid gap-16 lg:gap-20">
                    
                    {/* Service 1: Renovations - Rounded Rectangle */}
                    <div class="grid lg:grid-cols-12 gap-8 items-center scroll-animate-up opacity-0" style="animation-delay: 0.1s;">
                        {/* Image Column */}
                        <div class="lg:col-span-7 relative group">
                            <div class="relative w-full h-80 rounded-3xl overflow-hidden shadow-2xl hover:shadow-3xl transition-all duration-700 hover:-translate-y-2 transform-gpu">
                                <img 
                                    src="/House-Renovation-1.jpg" 
                                    alt="House Renovation" 
                                    class="absolute inset-0 w-full h-full object-cover transition-all duration-700 group-hover:scale-110"
                                />

                                
                                {/* Hover indicator */}
                                <div class="absolute top-4 right-4 px-4 py-2 bg-white/95 backdrop-blur-md rounded-2xl text-xs font-bold text-gray-800 shadow-lg opacity-0 group-hover:opacity-100 transition-all duration-300 border border-white/50">
                                    <div class="flex items-center gap-2">
                                        <div class="w-2 h-2 bg-[#004225] rounded-full animate-pulse"></div>
                                        Hover to see After
                                    </div>
                                </div>
                            </div>
                        </div>

                        {/* Text Column - Rounded Rectangle Border */}
                        <div class="lg:col-span-5 relative">
                            <div class="relative bg-white/90 backdrop-blur-sm p-8 lg:p-10 rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-500 group hover:-translate-y-1 border-l-4 border-l-[#004225]/30 hover:border-l-[#004225] hover:border-l-8">
                                {/* Shape-echoing accent */}
                                <div class="absolute -left-6 top-8 bottom-8 w-3 bg-gradient-to-b from-[#004225] to-[#006837] rounded-r-full opacity-60"></div>
                                
                                <div class="flex items-center gap-4 mb-6">
                                    <div class="w-16 h-16 bg-gradient-to-br from-[#004225] to-[#006837] rounded-2xl flex items-center justify-center group-hover:scale-110 group-hover:rotate-6 transition-all duration-300 shadow-lg">
                                        <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z"/>
                                        </svg>
                                    </div>
                                </div>
                                <h3 class="text-2xl lg:text-3xl font-bold mb-4 text-gray-900 group-hover:text-[#004225] transition-colors duration-300">Renovations</h3>
                                <p class="text-gray-600 leading-relaxed mb-6 text-lg">Transform your existing space with expert renovation services. From modern updates to complete makeovers, we bring your vision to life with precision and care.</p>
                                <a href="/services#renovations" class="inline-flex items-center text-[#004225] hover:text-[#006837] transition-all duration-300 text-lg font-semibold bg-[#004225]/5 hover:bg-[#004225]/10 px-4 py-2 rounded-full shadow-md hover:shadow-lg">
                                    Explore Renovations
                                    <svg class="w-5 h-5 ml-2 group-hover:translate-x-2 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>

                    {/* Service 2: New Builds - Circle */}
                    <div class="grid lg:grid-cols-12 gap-8 items-center scroll-animate-up opacity-0" style="animation-delay: 0.2s;">
                        {/* Text Column - Line Border (Right side first for alternating layout) */}
                        <div class="lg:col-span-5 order-2 lg:order-1 relative">
                            <div class="relative bg-white/90 backdrop-blur-sm p-8 lg:p-10 rounded-3xl shadow-xl hover:shadow-2xl transition-all duration-500 group hover:-translate-y-1 border-r-4 border-r-blue-500/30 hover:border-r-blue-500 hover:border-r-8">
