---
// CTA1.astro - Unique and Interesting Call-to-Action Component
---

<!-- Unique CTA Section with Geometric Design -->
<section class="cta-section scroll-animate-up" aria-labelledby="cta-title">
  <div class="cta-container">
    <!-- Animated Background Elements -->
    <div class="cta-bg-elements">
      <div class="floating-shape shape-1"></div>
      <div class="floating-shape shape-2"></div>
      <div class="floating-shape shape-3"></div>
      <div class="floating-shape shape-4"></div>
      <div class="geometric-pattern"></div>
    </div>

    <!-- Main Content -->
    <div class="cta-content">
      <div class="cta-header">
        <div class="cta-badge">
          <span class="badge-icon">ðŸš€</span>
          <span>Let's Build Together</span>
        </div>
        <h2 id="cta-title" class="cta-title">
          <span class="title-line">Ready to Transform</span>
          <span class="title-line highlight">Your Vision?</span>
        </h2>
        <p class="cta-description">
          Join hundreds of satisfied clients who've trusted us to bring their construction dreams to life. 
          Let's create something extraordinary together.
        </p>
      </div>

      <!-- Action Buttons -->
      <div class="cta-actions">
        <a href="/contact" class="cta-btn primary-btn">
          <span class="btn-text">Start Your Project</span>
          <div class="btn-glow"></div>
          <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </a>
        <a href="/services" class="cta-btn secondary-btn">
          <span class="btn-text">Explore Services</span>
          <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
          </svg>
        </a>
      </div>

      <!-- Trust Indicators -->
      <div class="cta-trust">
        <div class="trust-text">Trusted by Auckland's leading developers</div>
        <div class="trust-badges">
          <div class="trust-badge">Licensed</div>
          <div class="trust-badge">Insured</div>
          <div class="trust-badge">Certified</div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* CSS Variables */
  :root {
    --charcoal: #111827;
    --navy: #162539;
    --white: #ffffff;
    --gold: #d4af37;
    --gold-light: #e5c158;
    --gold-dark: #b8941f;
    --shadow-sm: 0 2px 4px rgba(22, 37, 57, 0.1);
    --shadow-md: 0 4px 8px rgba(22, 37, 57, 0.15);
    --shadow-lg: 0 8px 16px rgba(22, 37, 57, 0.2);
    --shadow-xl: 0 16px 32px rgba(22, 37, 57, 0.25);
  }

  /* Base Styles */
  .cta-section {
    position: relative;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    margin-right: calc(-50vw + 50%);
    overflow: hidden;
    font-family: 'Sans serif', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
  }

  .cta-container {
    position: relative;
    background: linear-gradient(135deg, var(--navy) 0%, var(--charcoal) 100%);
    padding: 2.5rem 1rem;
    isolation: isolate;
  }

  /* Animated Background Elements */
  .cta-bg-elements {
    position: absolute;
    inset: 0;
    z-index: 1;
    overflow: hidden;
  }

  .floating-shape {
    position: absolute;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--gold), var(--gold-light));
    opacity: 0.1;
    animation: float 6s ease-in-out infinite;
  }

  .shape-1 {
    width: 80px;
    height: 80px;
    top: 15%;
    left: 5%;
    animation-delay: 0s;
  }

  .shape-2 {
    width: 60px;
    height: 60px;
    top: 70%;
    right: 10%;
    animation-delay: 2s;
  }

  .shape-3 {
    width: 40px;
    height: 40px;
    bottom: 25%;
    left: 15%;
    animation-delay: 4s;
  }

  .shape-4 {
    width: 70px;
    height: 70px;
    top: 40%;
    right: 25%;
    animation-delay: 1s;
  }

  .geometric-pattern {
    position: absolute;
    top: 0;
    right: 0;
    width: 200px;
    height: 200px;
    background-image: 
      radial-gradient(circle at 20% 80%, var(--gold) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, var(--gold-light) 0%, transparent 50%),
      radial-gradient(circle at 40% 40%, var(--gold-dark) 0%, transparent 50%);
    opacity: 0.05;
    transform: rotate(45deg);
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-15px) rotate(180deg); }
  }

  /* Main Content */
  .cta-content {
    position: relative;
    z-index: 2;
    max-width: 1000px;
    margin: 0 auto;
    text-align: center;
  }

  /* Header Section */
  .cta-header {
    margin-bottom: 2rem;
  }

  .cta-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, var(--gold), var(--gold-light));
    color: var(--navy);
    padding: 0.5rem 1.25rem;
    border-radius: 2rem;
    font-weight: 600;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
    box-shadow: var(--shadow-md);
  }

  .badge-icon {
    font-size: 1.125rem;
  }

  .cta-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 900;
    line-height: 1.1;
    color: var(--white);
    margin-bottom: 1rem;
  }

  .title-line {
    display: block;
  }

  .title-line.highlight {
    background: linear-gradient(135deg, var(--gold), var(--gold-light));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .cta-description {
    font-size: 1.125rem;
    color: var(--white);
    opacity: 0.9;
    max-width: 500px;
    margin: 0 auto;
    line-height: 1.5;
  }

  /* Action Buttons */
  .cta-actions {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    justify-content: center;
    align-items: center;
    margin: 2rem 0;
  }

  .cta-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1.75rem;
    border-radius: 0.875rem;
    font-weight: 700;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    overflow: hidden;
    min-width: 180px;
    justify-content: center;
  }

  .primary-btn {
    background: linear-gradient(135deg, var(--gold), var(--gold-light));
    color: var(--navy);
    box-shadow: var(--shadow-lg);
  }

  .primary-btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-xl);
  }

  .btn-glow {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.5s ease;
  }

  .primary-btn:hover .btn-glow {
    left: 100%;
  }

  .secondary-btn {
    background: transparent;
    color: var(--white);
    border: 2px solid var(--gold);
  }

  .secondary-btn:hover {
    background: var(--gold);
    color: var(--navy);
    transform: translateY(-2px);
  }

  .btn-icon {
    width: 1.125rem;
    height: 1.125rem;
    transition: transform 0.3s ease;
  }

  .cta-btn:hover .btn-icon {
    transform: translateX(4px);
  }

  /* Trust Indicators */
  .cta-trust {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .trust-text {
    color: var(--white);
    opacity: 0.7;
    font-size: 0.8125rem;
    margin-bottom: 0.75rem;
  }

  .trust-badges {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .trust-badge {
    background: rgba(255, 255, 255, 0.1);
    color: var(--gold);
    padding: 0.375rem 0.875rem;
    border-radius: 0.5rem;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 1px solid rgba(212, 175, 55, 0.3);
  }

  /* Responsive Design */
  @media (min-width: 640px) {
    .cta-container {
      padding: 3rem 2rem;
    }

    .cta-actions {
      flex-direction: row;
    }
  }

  @media (min-width: 768px) {
    .cta-container {
      padding: 3.5rem 2rem;
    }

    .cta-title {
      font-size: clamp(2.5rem, 5vw, 4rem);
    }

    .cta-description {
      font-size: 1.25rem;
    }
  }

  @media (min-width: 1024px) {
    .cta-container {
      padding: 4rem 2rem;
    }
  }

  /* Scroll Animation */
  .scroll-animate-up {
    opacity: 0;
    transform: translateY(25px);
  }

  .scroll-animate-up.in-view {
    opacity: 1;
    transform: translateY(0);
    transition: opacity 0.7s ease, transform 0.7s ease;
  }

  /* Hover Effects */
  .cta-btn:active {
    transform: translateY(-1px);
  }

  /* Focus States */
  .cta-btn:focus {
    outline: 2px solid var(--gold);
    outline-offset: 2px;
  }
</style>

<script>
  // Enhanced IntersectionObserver with staggered animations
  document.addEventListener('DOMContentLoaded', () => {
    const elements = document.querySelectorAll('.scroll-animate-up');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          // Stagger the animation for child elements
          setTimeout(() => {
            entry.target.classList.add('in-view');
          }, index * 100);
          observer.unobserve(entry.target);
        }
      });
    }, { 
      threshold: 0.2,
      rootMargin: '0px 0px -50px 0px'
    });

    elements.forEach(element => {
      observer.observe(element);
    });
  });
</script>