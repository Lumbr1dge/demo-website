---
import Footer from '../components/Footer.astro';
import Layout from '../layouts/Layout.astro';
import NavBar from '../components/NavBar.astro';
import CTA from '../components/CTA.astro';
import { Astro } from 'astro';

const currentPath = Astro.url.pathname;
---

<Layout title="About - Draft & Build">
    <NavBar currentPath={currentPath} />
    
    <main class="min-h-screen bg-gray-50">
        {/* Hero Section */}
        <section class="pt-32 pb-16 px-4">
            <div class="max-w-7xl mx-auto">
                <div class="bg-white/90 backdrop-blur-xl rounded-3xl p-10 border-2 border-gray-200/50 shadow-2xl hover:shadow-3xl transition-all duration-500">
                    <div class="text-center mb-16 relative">
                        {/* Background accent */}
                        <div class="absolute inset-x-0 top-1/2 -translate-y-1/2 h-[150%] bg-gradient-to-r from-[#B22222]/5 via-white to-[#330000]/5"></div>
                        
                        {/* Title container */}
                        <div class="relative inline-flex items-center">
                            {/* Left decorative element */}
                            <div class="absolute -left-12 top-1/2 -translate-y-1/2">
                                <div class="w-8 h-[2px] bg-gradient-to-r from-[#B22222] to-transparent"></div>
                                <div class="w-6 h-[2px] bg-gradient-to-r from-[#B22222]/50 to-transparent mt-1"></div>
                                <div class="w-4 h-[2px] bg-gradient-to-r from-[#B22222]/20 to-transparent mt-1"></div>
                            </div>

                            {/* Title */}
                            <h1 class="text-5xl font-bold px-16">
                                <span class="relative">
                                    <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#330000] to-[#330000]/90">About</span>
                                    <div class="absolute -bottom-2 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-[#330000]/20 to-transparent"></div>
                                </span>
                                <span class="relative ml-3">
                                    <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#B22222] to-[#B22222]/90">Us</span>
                                    <div class="absolute -bottom-2 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-[#B22222]/20 to-transparent"></div>
                                </span>
                            </h1>

                            {/* Right decorative element */}
                            <div class="absolute -right-12 top-1/2 -translate-y-1/2">
                                <div class="w-8 h-[2px] bg-gradient-to-l from-[#B22222] to-transparent"></div>
                                <div class="w-6 h-[2px] bg-gradient-to-l from-[#B22222]/50 to-transparent mt-1"></div>
                                <div class="w-4 h-[2px] bg-gradient-to-l from-[#B22222]/20 to-transparent mt-1"></div>
                            </div>
                        </div>

                        {/* Subtitle */}
                        <div class="relative mt-6">
                            <p class="text-gray-600 text-lg">Building excellence through innovation, quality, and dedication to our craft</p>
                            <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-24 h-[1px] bg-gradient-to-r from-transparent via-[#B22222]/30 to-transparent"></div>
                        </div>
                    </div>

                    {/* Who We Are Section with Image */}
                    <div class="mb-16 animate-fade-in [animation-delay:200ms]">
                        <div class="bg-white rounded-2xl p-8 shadow-md hover:shadow-lg transition-all duration-300">
                            <div class="grid md:grid-cols-2 gap-12 items-center">
                                {/* Image with irregular shape */}
                                <div class="relative group animate-fade-in [animation-delay:800ms]">
                                    <div class="absolute inset-0 bg-gradient-to-br from-[#B22222]/20 to-[#330000]/20 rounded-[70px_20px_70px_20px] transform rotate-6 group-hover:rotate-3 transition-all duration-500"></div>
                                    <img 
                                        src="/AboutUsPageWhoWeAre.jpg" 
                                        alt="Who We Are" 
                                        class="relative z-10 w-full h-[500px] object-cover rounded-[60px_15px_60px_15px] shadow-xl transform -rotate-3 group-hover:rotate-0 transition-all duration-500"
                                    />
                                    <div class="absolute inset-0 bg-gradient-to-tr from-[#B22222]/10 to-transparent rounded-[60px_15px_60px_15px] mix-blend-overlay"></div>
                                </div>

                                {/* Text Content */}
                                <div class="space-y-6 animate-fade-in [animation-delay:1000ms]">
                                    <h2 class="text-4xl font-bold text-gray-800 mb-6 animate-fade-in [animation-delay:1200ms]">Who Are We?</h2>
                                    <p class="text-gray-600 text-lg leading-relaxed mb-6 animate-fade-in [animation-delay:1400ms]">
                                        We help people to build incredible spaces and superior constructions. Our perspective is to furnish outstanding captivating services.
                                    </p>
                                    <div class="space-y-8 animate-fade-in [animation-delay:1600ms]">
                                        <div class="flex items-start space-x-4 animate-fade-in [animation-delay:1800ms]">
                                            <div class="flex-shrink-0">
                                                <div class="p-3 bg-[#B22222]/10 rounded-xl">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#B22222]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                                                    </svg>
                                                </div>
                                            </div>
                                            <div>
                                                <h3 class="text-xl font-semibold text-gray-800 mb-2 animate-fade-in [animation-delay:2000ms]">Master Builders</h3>
                                                <p class="text-gray-600 animate-fade-in [animation-delay:2200ms]">We create lasting structures that stand the test of time, built with precision and expertise.</p>
                                            </div>
                                        </div>
                                        <div class="flex items-start space-x-4 animate-fade-in [animation-delay:2400ms]">
                                            <div class="flex-shrink-0">
                                                <div class="p-3 bg-[#B22222]/10 rounded-xl">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#B22222]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                                                    </svg>
                                                </div>
                                            </div>
                                            <div>
                                                <h3 class="text-xl font-semibold text-gray-800 mb-2 animate-fade-in [animation-delay:2600ms]">Quality Craftsmanship</h3>
                                                <p class="text-gray-600 animate-fade-in [animation-delay:2800ms]">We combine traditional building expertise with modern techniques for superior results.</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {/* Company Overview Section */}
                    <div class="mb-16">
                        <div class="bg-white rounded-2xl p-12 shadow-lg border border-gray-100">
                            <h2 class="text-4xl font-bold mb-12 text-gray-800 flex items-center">
                                <div class="w-12 h-1 bg-[#B22222] mr-4"></div>
                                Company Overview
                            </h2>
                            <div class="grid md:grid-cols-3 gap-12">
                                <div class="relative">
                                    <div class="absolute -top-2 -left-2 w-12 h-12 bg-[#B22222]/10 rounded-lg"></div>
                                    <div class="relative bg-white p-8 rounded-lg border border-gray-100">
                                        <div class="text-[#B22222] mb-6">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                            </svg>
                                        </div>
                                        <h3 class="text-2xl font-bold text-gray-800 mb-4">Our Foundation</h3>
                                        <p class="text-gray-600 leading-relaxed">Licensed builders with a decade of experience transforming construction challenges into exceptional results.</p>
                                    </div>
                                </div>
                                <div class="relative">
                                    <div class="absolute -top-2 -left-2 w-12 h-12 bg-[#B22222]/10 rounded-lg"></div>
                                    <div class="relative bg-white p-8 rounded-lg border border-gray-100">
                                        <div class="text-[#B22222] mb-6">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                            </svg>
                                        </div>
                                        <h3 class="text-2xl font-bold text-gray-800 mb-4">Expert Leadership</h3>
                                        <p class="text-gray-600 leading-relaxed">Led by <strong>Joseph</strong> , a licensed builder with 13+ years of hands-on experience ensuring excellence in every project.</p>
                                    </div>
                                </div>
                                <div class="relative">
                                    <div class="absolute -top-2 -left-2 w-12 h-12 bg-[#B22222]/10 rounded-lg"></div>
                                    <div class="relative bg-white p-8 rounded-lg border border-gray-100">
                                        <div class="text-[#B22222] mb-6">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                                            </svg>
                                        </div>
                                        <h3 class="text-2xl font-bold text-gray-800 mb-4">Skilled Team</h3>
                                        <p class="text-gray-600 leading-relaxed">A dedicated team of craftsmen bringing decades of combined experience to every construction project.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {/* What We Do Section */}
                    <div class="mb-16">
                        <div class="bg-[#B22222]/5 rounded-2xl p-12">
                            <h2 class="text-4xl font-bold mb-12 text-gray-800 flex items-center">
                                <div class="w-12 h-1 bg-[#B22222] mr-4"></div>
                                What We Do
                            </h2>
                            <div class="grid md:grid-cols-2 gap-8">
                                <div class="bg-white p-8 rounded-lg shadow-md">
                                    <div class="flex items-start gap-6">
                                        <div class="text-[#B22222] bg-[#B22222]/10 p-4 rounded-lg">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z" />
                                            </svg>
                                        </div>
                                        <div>
                                            <h3 class="text-2xl font-bold text-gray-800 mb-4">New Builds</h3>
                                            <p class="text-gray-600 leading-relaxed">Custom homes built to your vision, with meticulous attention to detail from foundation to finish.</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="bg-white p-8 rounded-lg shadow-md">
                                    <div class="flex items-start gap-6">
                                        <div class="text-[#B22222] bg-[#B22222]/10 p-4 rounded-lg">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                            </svg>
                                        </div>
                                        <div>
                                            <h3 class="text-2xl font-bold text-gray-800 mb-4">Renovations</h3>
                                            <p class="text-gray-600 leading-relaxed">Expert renovation services for kitchens, bathrooms, and complete home transformations.</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="bg-white p-8 rounded-lg shadow-md">
                                    <div class="flex items-start gap-6">
                                        <div class="text-[#B22222] bg-[#B22222]/10 p-4 rounded-lg">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                                            </svg>
                                        </div>
                                        <div>
                                            <h3 class="text-2xl font-bold text-gray-800 mb-4">Specialised Outdoor Living Spaces</h3>
                                            <p class="text-gray-600 leading-relaxed">Specialised outdoor living spaces including decks, fences, and retaining walls.</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="bg-white p-8 rounded-lg shadow-md">
                                    <div class="flex items-start gap-6">
                                        <div class="text-[#B22222] bg-[#B22222]/10 p-4 rounded-lg">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                                            </svg>
                                        </div>
                                        <div>
                                            <h3 class="text-2xl font-bold text-gray-800 mb-4">Design + Build</h3>
                                            <p class="text-gray-600 leading-relaxed">Comprehensive service combining architectural design with expert construction.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {/* Service Areas Section */}
                    <div class="mb-16">
                        <div id="serviceAreasSection" class="bg-[#B22222]/5 rounded-2xl p-12">
                            <div class="grid md:grid-cols-2 gap-12 items-start">
                                {/* Map Image */}
                                <div class="relative group">
                                    <div class="absolute inset-0 bg-gradient-to-br from-[#B22222]/20 to-[#330000]/20 rounded-[80px_20px_80px_20px] transform rotate-3 group-hover:rotate-6 transition-all duration-500"></div>
                                    <div class="relative overflow-hidden rounded-[70px_15px_70px_15px] shadow-xl">
                                        <img 
                                            src="/NewZealandMapServices.webp" 
                                            alt="New Zealand Service Areas" 
                                            class="w-full h-[600px] object-cover transform -rotate-2 group-hover:rotate-0 transition-all duration-500 scale-105"
                                        />
                                        <div class="absolute inset-0 bg-gradient-to-tr from-[#B22222]/10 to-transparent mix-blend-overlay"></div>
                                    </div>
                                    <div class="absolute -bottom-4 -right-4 w-32 h-32 bg-[#B22222]/5 rounded-full filter blur-2xl"></div>
                                    <div class="absolute -top-4 -left-4 w-32 h-32 bg-[#330000]/5 rounded-full filter blur-2xl"></div>
                                </div>

                                {/* Service Areas Content */}
                                <div>
                                    <h2 class="text-4xl font-bold mb-6 text-gray-800 flex items-center">
                                        <div class="w-12 h-1 bg-[#B22222] mr-4"></div>
                                        Service Areas
                                    </h2>
                                    <p class="text-gray-600 text-xl leading-relaxed mb-8">Proudly building across Auckland, bringing quality services to your neighborhood.</p>
                                    {/* Main Areas */}
                                    <div class="grid grid-cols-1 gap-3">
                                        {["Auckland", "North Shore", "Manukau", "Waitakere", "Thames/Coromandel Region"].map((area) => (
                                            <div class="bg-white p-4 rounded-lg shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                                                <div class="flex items-center gap-3">
                                                    <div class="text-[#B22222] bg-[#B22222]/10 p-2 rounded-lg">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                                        </svg>
                                                    </div>
                                                    <span class="text-gray-800 font-medium text-base">{area}</span>
                                                </div>
                                            </div>
                                        ))}
                                    </div>
                                </div>
                            </div>

                            {/* View All Areas Button */}
                            <div class="flex justify-center mt-12">
                                <button id="toggleAreas" class="group flex items-center gap-3 bg-white px-6 py-3 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 border-2 border-[#B22222]/20">
                                    <span class="text-[#B22222] font-bold text-base group-hover:text-[#330000]">View All Service Areas</span>
                                    <svg id="arrowIcon" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#B22222] group-hover:text-[#330000] transform transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                    </svg>
                                </button>
                            </div>

                            {/* Expandable Areas List */}
                            <div id="allAreas" class="hidden w-full mt-8 bg-white rounded-2xl shadow-lg border border-gray-100 p-8">
                                <h3 class="text-2xl font-bold text-gray-800 mb-6 text-center">All Service Areas</h3>
                                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-h-[400px] overflow-y-auto custom-scrollbar px-4">
                                    {[
                                        "Whitianga", "Westmere", "Western Springs", "Waterview", "Warkworth Township", 
                                        "Warkworth & Wellsford Area", "Waitakere City and Suburbs", "Waitakere City", 
                                        "Waihi Area", "Waiatarua", "Titirangi", "Thames/Coromandel Region", "Thames Area", 
                                        "Tairua", "Sunnyvale", "Stanmore Bay", "St Marys Bay", "St Lukes", "St Johns", 
                                        "St Heliers", "Silverdale", "Sandringham", "Royal Oak", "Royal Heights", 
                                        "Rothesay Bay", "Rosedale (Auckland)", "Rodney Area", "Riverhead", "Remuera", 
                                        "Red Beach", "Ranui (Waitakare)", "Ponsonby", "Point Chevalier", "Piha", "Parnell", 
                                        "Papakura Area", "Paeroa Area", "Orewa", "Oratia", "Orakei", "Northcote", 
                                        "North Shore City and Suburbs", "North Shore", "Newmarket", "New Lynn", "Mt Roskill", 
                                        "Mt Eden", "Mt Albert", "Mission Bay", "Milford", "Meadowbank", "Matakana", 
                                        "Manukau City and Suburbs", "Manukau central", "Mangere Bridge", "Mangawhai", 
                                        "Manakau", "Mairangi Bay", "Lynfield", "Long Bay", "Laingholm", "Kumeu", 
                                        "Kohimarama", "Kingsland", "Kelston", "Karekare", "Huia", "Howick", "Hobsonville", 
                                        "Hillsborough (Auckland)", "Hillcrest (North Shore)", "Hibiscus Coast Area", 
                                        "Herne Bay", "Henderson Valley", "Henderson", "Helensville Central", 
                                        "Helensville Area", "Hamilton East", "Hamilton City", "Hamilton Area", 
                                        "Half Moon Bay", "Hahei", "Gulf Harbour", "Grey Lynn", "Greenlane", "Greenhithe", 
                                        "Green Bay", "Grafton", "Glenfield", "Glendowie", "Glendene", "Glenbrook", 
                                        "Glen Eden", "Freemans Bay", "Franklin Central", "Franklin Area", "Forrest Hill", 
                                        "Flaxmere", "Flat Bush", "Ferry Landing", "Epsom", "Ellerslie", "Eden Terrace", 
                                        "East Tamaki", "Devonport", "Dairy Flat", "Coromandel Coastal", "Coromandel", 
                                        "Coroglen", "Cooks Beach", "Cockle Bay", "Coatesville", "Clevedon", "Browns Bay", 
                                        "Bombay", "Blockhouse Bay", "Birkenhead", "Birkdale", "Bethells Beach", 
                                        "Belmont (Auckland)", "Beach Haven", "Bayswater", "Balmoral", "Avondale (Auckland)", 
                                        "Auckland City and Suburbs", "Auckland Central", "Arkles Bay", "Albany"
                                    ].sort().map((area) => (
                                        <div class="flex items-center gap-3 p-3 hover:bg-[#B22222]/5 rounded-lg transition-all duration-300 group cursor-pointer">
                                            <div class="text-[#B22222] bg-[#B22222]/10 p-2 rounded-lg group-hover:bg-[#B22222]/20">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                                </svg>
                                            </div>
                                            <span class="text-gray-700 font-medium group-hover:text-[#B22222]">{area}</span>
                                        </div>
                                    ))}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <CTA />
    </main>

    <Footer />
</Layout>

<style>
    .shadow-3xl {
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fadeIn 0.8s ease-out forwards;
        opacity: 0;
    }

    .animation-delay-2000 {
        animation-delay: 2s;
    }

    .animation-delay-4000 {
        animation-delay: 4s;
    }

    .animation-delay-6000 {
        animation-delay: 6s;
    }

    .scroll-animate-up {
        will-change: transform, opacity;
        opacity: 0;
        transform: translateY(50px);
    }

    .custom-scrollbar {
        scrollbar-width: thin;
        scrollbar-color: #E5E7EB transparent;
    }

    .custom-scrollbar::-webkit-scrollbar {
        width: 6px;
    }

    .custom-scrollbar::-webkit-scrollbar-track {
        background: transparent;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
        background-color: #E5E7EB;
        border-radius: 3px;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background-color: #D1D5DB;
    }

    @keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }

    .delay-100 {
        animation-delay: 100ms;
    }
    .delay-200 {
        animation-delay: 200ms;
