---
import Footer from '../components/Footer.astro';
import Layout from '../layouts/Layout.astro';
import NavBar from '../components/NavBar.astro';
import CTA from '../components/CTA.astro';

const currentPath = Astro.url.pathname;
---

<Layout title="About - Draft & Build">
    <NavBar currentPath={currentPath} />
    
    <main class="min-h-screen bg-gradient-to-br from-white via-blue-50/30 to-white overflow-hidden">
        {/* Dynamic Background Elements */}
        <div class="absolute inset-0 pointer-events-none">
            <div class="absolute top-20 left-10 w-72 h-72 bg-[#004225]/5 rounded-full blur-3xl animate-pulse"></div>
            <div class="absolute bottom-40 right-10 w-96 h-96 bg-blue-500/5 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
            <div class="absolute top-1/2 left-1/3 w-64 h-64 bg-green-500/3 rounded-full blur-3xl animate-pulse" style="animation-delay: 4s;"></div>
        </div>

        {/* Enhanced Hero Section */}
        <section class="pt-28 sm:pt-36 pb-20 px-4 relative z-10">
            <div class="max-w-7xl mx-auto">
                {/* Hero Content */}
                <div class="text-center mb-20 scroll-animate-up opacity-0">
                    <div class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-[#004225]/10 to-blue-500/10 rounded-full mb-8 shadow-lg backdrop-blur-sm border border-white/50 hover:shadow-xl transition-all duration-500">
                        <span class="w-2 h-2 bg-gradient-to-r from-[#004225] to-blue-500 rounded-full animate-pulse"></span>
                        <span class="text-sm font-bold text-[#004225] uppercase tracking-wider">Our Story</span>
                    </div>
                    <h1 class="text-5xl md:text-6xl lg:text-7xl font-black mb-6 text-gray-900">
                        <span class="block">About</span>
                        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-[#004225] via-blue-500 to-[#006837]">
                            Draft & Build
                        </span>
                    </h1>
                    <p class="text-xl md:text-2xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
                        Building Dreams, Delivering Excellence
                    </p>
                    <div class="w-24 h-1 bg-gradient-to-r from-[#004225] to-blue-500 mx-auto mt-8 rounded-full"></div>
                </div>

                {/* Main Content Grid */}
                <div class="grid lg:grid-cols-2 gap-16 items-center mb-20">
                    {/* Enhanced Image Section */}
                    <div class="relative scroll-animate-up opacity-0" style="animation-delay: 0.2s;">
                        <div class="relative group">
                            {/* Background effects */}
                            <div class="absolute -inset-8 bg-gradient-to-r from-[#004225]/10 to-blue-500/10 rounded-[3rem] blur-xl opacity-0 group-hover:opacity-100 transition-all duration-700"></div>
                            
                            {/* Main image container */}
                            <div class="relative h-[400px] lg:h-[500px] rounded-3xl overflow-hidden shadow-2xl hover:shadow-3xl transition-all duration-700 border-2 border-white/50 backdrop-blur-sm">
                                <img 
                                    src="/AboutUsPageWhoWeAre.jpg" 
                                    alt="Draft & Build Team" 
                                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                                    loading="eager"
                                />
                                <div class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent"></div>
                                
                                {/* Floating info card */}
                                <div class="absolute bottom-6 left-6 right-6 bg-white/95 backdrop-blur-md p-6 rounded-2xl shadow-xl border border-white/50 transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500">
                                    <h3 class="text-lg font-bold text-gray-900 mb-2">Our Team</h3>
                                    <p class="text-gray-600 text-sm">Licensed professionals dedicated to excellence</p>
                                </div>
                            </div>

                            {/* Decorative elements */}
                            <div class="absolute -top-6 -right-6 w-24 h-24 bg-gradient-to-br from-[#004225]/20 to-transparent rounded-full blur-xl animate-pulse"></div>
                            <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-gradient-to-tr from-blue-500/15 to-transparent rounded-full blur-xl animate-pulse" style="animation-delay: 1s;"></div>
                        </div>
                    </div>

                    {/* Enhanced Content Section */}
                    <div class="space-y-8 scroll-animate-up opacity-0" style="animation-delay: 0.4s;">
                        {/* Our Story */}
                        <div class="bg-white/90 backdrop-blur-sm p-8 rounded-3xl shadow-xl border border-white/50 hover:shadow-2xl hover:-translate-y-1 transition-all duration-500">
                            <div class="flex items-center gap-4 mb-6">
                                <div class="w-16 h-16 bg-gradient-to-br from-[#004225] to-[#006837] rounded-2xl flex items-center justify-center shadow-lg">
                                    <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                                    </svg>
                                </div>
                                <div>
                                    <h2 class="text-2xl font-bold text-gray-900">Our Story</h2>
                                    <div class="w-12 h-1 bg-gradient-to-r from-[#004225] to-[#006837] rounded-full mt-1"></div>
                                </div>
                            </div>
                            <p class="text-gray-600 leading-relaxed text-lg">
                                Draft & Build is a residential building company based in Auckland, dedicated to delivering exceptional craftsmanship and a stress-free building experience. With over 13 years of expertise, we've built a reputation for quality, reliability, and attention to detail.
                            </p>
                        </div>

                        {/* Our Approach */}
                        <div class="bg-white/90 backdrop-blur-sm p-8 rounded-3xl shadow-xl border border-white/50 hover:shadow-2xl hover:-translate-y-1 transition-all duration-500">
                            <div class="flex items-center gap-4 mb-6">
                                <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-700 rounded-2xl flex items-center justify-center shadow-lg">
                                    <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                                    </svg>
                                </div>
                                <div>
                                    <h2 class="text-2xl font-bold text-gray-900">Our Approach</h2>
                                    <div class="w-12 h-1 bg-gradient-to-r from-blue-500 to-blue-700 rounded-full mt-1"></div>
                                </div>
                            </div>
                            <p class="text-gray-600 leading-relaxed text-lg">
                                We believe in transparent communication, meticulous planning, and superior execution. Every project is handled with the same level of dedication, whether it's a small renovation or a complete new build.
                            </p>
                        </div>
                    </div>
                </div>

                {/* Enhanced Stats Section */}
                <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-20 scroll-animate-up opacity-0" style="animation-delay: 0.6s;">
                    <div class="group bg-gradient-to-br from-white to-gray-50/50 backdrop-blur-sm p-8 rounded-3xl shadow-xl border border-white/50 hover:shadow-2xl hover:-translate-y-2 transition-all duration-500 text-center">
                        <div class="text-4xl font-black text-[#004225] mb-2 group-hover:scale-110 transition-transform duration-300">13+</div>
                        <div class="text-gray-600 font-medium">Years Experience</div>
                        <div class="w-full h-1 bg-gradient-to-r from-[#004225] to-transparent rounded-full mt-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    </div>
                    <div class="group bg-gradient-to-br from-white to-blue-50/50 backdrop-blur-sm p-8 rounded-3xl shadow-xl border border-white/50 hover:shadow-2xl hover:-translate-y-2 transition-all duration-500 text-center">
                        <div class="text-4xl font-black text-blue-600 mb-2 group-hover:scale-110 transition-transform duration-300">50+</div>
                        <div class="text-gray-600 font-medium">Projects Done</div>
                        <div class="w-full h-1 bg-gradient-to-r from-blue-500 to-transparent rounded-full mt-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    </div>
                    <div class="group bg-gradient-to-br from-white to-green-50/50 backdrop-blur-sm p-8 rounded-3xl shadow-xl border border-white/50 hover:shadow-2xl hover:-translate-y-2 transition-all duration-500 text-center">
                        <div class="text-4xl font-black text-green-600 mb-2 group-hover:scale-110 transition-transform duration-300">100%</div>
                        <div class="text-gray-600 font-medium">Satisfaction</div>
                        <div class="w-full h-1 bg-gradient-to-r from-green-500 to-transparent rounded-full mt-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    </div>
                    <div class="group bg-gradient-to-br from-white to-purple-50/50 backdrop-blur-sm p-8 rounded-3xl shadow-xl border border-white/50 hover:shadow-2xl hover:-translate-y-2 transition-all duration-500 text-center">
                        <div class="text-4xl font-black text-purple-600 mb-2 group-hover:scale-110 transition-transform duration-300">LBP</div>
                        <div class="text-gray-600 font-medium">Certified</div>
                        <div class="w-full h-1 bg-gradient-to-r from-purple-500 to-transparent rounded-full mt-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    </div>
                </div>

                {/* Enhanced Values Section */}
                <section class="mb-20 scroll-animate-up opacity-0" style="animation-delay: 0.8s;">
                    <div class="text-center mb-16">
                        <h2 class="text-4xl md:text-5xl font-black mb-6 text-gray-900">
                            Our <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#004225] to-blue-500">Values</span>
                        </h2>
                        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                            The principles that drive everything we do
                        </p>
                    </div>
                    
                    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
                        {[
                            {
                                title: "Quality",
                                description: "We never compromise on quality, using only the finest materials and proven techniques.",
                                icon: "🏆",
                                color: "from-yellow-400 to-orange-500"
                            },
                            {
                                title: "Integrity",
                                description: "Honesty and transparency are at the core of everything we do.",
                                icon: "🤝",
                                color: "from-blue-400 to-blue-600"
                            },
                            {
                                title: "Innovation",
                                description: "We stay current with the latest building technologies and methods.",
                                icon: "💡",
                                color: "from-purple-400 to-purple-600"
                            },
                            {
                                title: "Reliability",
                                description: "Count on us to deliver on time and within budget, every time.",
                                icon: "⭐",
                                color: "from-green-400 to-green-600"
                            }
                        ].map((value, index) => (
                            <div class={`group bg-white/90 backdrop-blur-sm p-8 rounded-3xl shadow-xl border border-white/50 hover:shadow-2xl hover:-translate-y-2 transition-all duration-500 text-center relative overflow-hidden`} style={`animation-delay: ${0.1 * (index + 1)}s;`}>
                                {/* Background gradient on hover */}
                                <div class={`absolute inset-0 bg-gradient-to-br ${value.color} opacity-0 group-hover:opacity-10 transition-opacity duration-500`}></div>
                                
                                <div class="relative z-10">
                                    <div class="text-5xl mb-6 group-hover:scale-110 transition-transform duration-300">{value.icon}</div>
                                    <h3 class="text-xl font-bold text-gray-900 mb-4">{value.title}</h3>
                                    <p class="text-gray-600 leading-relaxed">{value.description}</p>
                                    <div class={`w-full h-1 bg-gradient-to-r ${value.color} rounded-full mt-6 opacity-0 group-hover:opacity-100 transition-opacity duration-300`}></div>
                                </div>
                            </div>
                        ))}
                    </div>
                </section>

                {/* Enhanced Service Areas Section */}
                <section class="scroll-animate-up opacity-0" style="animation-delay: 1s;">
                    <div class="text-center mb-16">
                        <h2 class="text-4xl md:text-5xl font-black mb-6 text-gray-900">
                            Areas We <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#004225] to-blue-500">Service</span>
                        </h2>
                        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                            Proudly serving communities across Auckland
                        </p>
                    </div>
                    
                    {/* Mobile View - Enhanced */}
                    <div class="block sm:hidden">
                        <div class="grid grid-cols-2 gap-4 mb-6" id="mobileAreasList">
                            {[
                                "Auckland City",
                                "North Shore",
                                "East Auckland",
                                "West Auckland",
                                "South Auckland",
                                "Rodney District"
                            ].map(area => (
                                <div class="group bg-white/90 backdrop-blur-sm p-6 rounded-2xl shadow-lg border border-white/50 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 text-center">
                                    <span class="text-gray-700 font-medium group-hover:text-[#004225] transition-colors duration-300">{area}</span>
                                    <div class="w-full h-1 bg-gradient-to-r from-[#004225] to-transparent rounded-full mt-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                                </div>
                            ))}
                        </div>
                        <div class="hidden" id="mobileAreasListFull">
                            <div class="grid grid-cols-2 gap-4">
                                {[
                                    "Auckland City",
                                    "North Shore", 
                                    "East Auckland",
                                    "West Auckland",
                                    "South Auckland",
                                    "Rodney District",
                                    "Waitakere",
                                    "Manukau"
                                ].map(area => (
                                    <div class="group bg-white/90 backdrop-blur-sm p-6 rounded-2xl shadow-lg border border-white/50 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 text-center">
                                        <span class="text-gray-700 font-medium group-hover:text-[#004225] transition-colors duration-300">{area}</span>
                                        <div class="w-full h-1 bg-gradient-to-r from-[#004225] to-transparent rounded-full mt-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                                    </div>
                                ))}
                            </div>
                        </div>
                        <button id="showMoreBtn" class="mt-6 w-full py-4 px-6 bg-gradient-to-r from-[#004225] to-[#006837] text-white rounded-2xl font-semibold hover:from-[#006837] hover:to-[#004225] transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-1 transform-gpu">
                            Show More Areas
                        </button>
                    </div>

                    {/* Desktop View - Enhanced */}
                    <div class="hidden sm:grid sm:grid-cols-3 md:grid-cols-4 gap-6">
                        {[
                            "Auckland City",
                            "North Shore",
                            "East Auckland", 
                            "West Auckland",
                            "South Auckland",
                            "Rodney District",
                            "Waitakere",
                            "Manukau"
                        ].map((area, index) => (
                            <div class="group bg-white/90 backdrop-blur-sm p-6 rounded-2xl shadow-lg border border-white/50 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 text-center" style={`animation-delay: ${0.05 * index}s;`}>
                                <span class="text-gray-700 font-medium group-hover:text-[#004225] transition-colors duration-300">{area}</span>
                                <div class="w-full h-1 bg-gradient-to-r from-[#004225] to-transparent rounded-full mt-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                            </div>
                        ))}
                    </div>
                </section>

                {/* CTA Section - Moved above reviews */}
                <section class="scroll-animate-up opacity-0" style="animation-delay: 1.2s;">
                    <div class="bg-gradient-to-br from-[#004225] to-[#006837] rounded-3xl p-12 text-center relative overflow-hidden shadow-2xl">
                        {/* Decorative background elements */}
                        <div class="absolute inset-0">
                            <div class="absolute top-10 left-10 w-32 h-32 bg-white/10 rounded-full blur-2xl"></div>
                            <div class="absolute bottom-10 right-10 w-24 h-24 bg-white/10 rounded-full blur-xl"></div>
                        </div>
                        
                        <div class="relative z-10">
                            <h2 class="text-3xl md:text-4xl font-black text-white mb-6">
                                Ready to Start Your Project?
                            </h2>
                            <p class="text-xl text-white/90 max-w-3xl mx-auto mb-10 leading-relaxed">
                                Let's discuss your vision and create something extraordinary together. Our expert team is ready to bring your ideas to life.
                            </p>
                            
                            {/* CTA Buttons */}
                            <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
                                <a href="/services" class="group inline-flex items-center px-8 py-4 bg-white text-[#004225] rounded-2xl font-bold text-lg hover:bg-gray-100 transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-1 transform-gpu">
                                    View All Services
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                                    </svg>
                                </a>
                                <a href="/contact" class="group inline-flex items-center px-8 py-4 bg-transparent text-white border-2 border-white rounded-2xl font-bold text-lg hover:bg-white hover:text-[#004225] transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-1 transform-gpu">
                                    Get Free Quote
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                </section>

                {/* Client Reviews Section */}
                <section class="mb-20 scroll-animate-up opacity-0" style="animation-delay: 1.4s;">
                    <div class="text-center mb-16">
                        <h2 class="text-4xl md:text-5xl font-black mb-6 text-gray-900">
                            What Our <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#004225] to-blue-500">Clients Say</span>
                        </h2>
                        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                            Real experiences from real clients who trusted us with their projects
                        </p>
                    </div>

                    {/* Reviews Grid */}
                    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                        {[
                            {
                                author: "Alix",
                                project: "New Home Build",
                                text: "From the first time we met Joseph and Tobin we knew we would be working with Draft and Build. Every question was answered, calls always returned, changes to the plan were not a problem. The quality of the build was amazing with any small issues being picked up and dealt with immediately."
                            },
                            {
                                author: "Steven",
                                project: "Deck Installation", 
                                text: "We are delighted with our new deck installation. Not only were we really happy with the outcome, but the process of completion filled us with confidence that we had made the right choice when choosing Draft and Build."
                            },
                            {
                                author: "James",
                                project: "Custom Project",
                                text: "Really happy with the outcome of this job. Not often you find builders with such attention to detail. Project management was really transparent as to what's going on. Would highly recommend Draft and Build."
                            },
                            {
                                author: "Graeme", 
                                project: "New Home Build",
                                text: "From the very first contact with Draft and Build Ltd we were very impressed with their promptness and communication. Work was completed on schedule and to an excellent standard."
                            },
                            {
                                author: "Carl",
                                project: "New Home Build",
                                text: "Draft and build were excellent! Communication was spot on and asked for my opinion when things were impacting the final presentation of the job. Even came in below the initial quote."
                            },
                            {
                                author: "Richard",
                                project: "New Home Build", 
                                text: "The lads did a great job at our place. Communication was excellent, they turned up when scheduled and were very flexible with the changes we wanted. Job was completed to a very high standard."
                            }
                        ].map((review, index) => (
                            <div class="group bg-white/90 backdrop-blur-sm p-8 rounded-3xl shadow-xl border border-white/50 hover:shadow-2xl hover:-translate-y-2 transition-all duration-500 relative overflow-hidden" style={`animation-delay: ${0.1 * (index + 1)}s;`}>
                                {/* Background gradient on hover */}
                                <div class="absolute inset-0 bg-gradient-to-br from-[#004225]/5 to-blue-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                                
                                <div class="relative z-10">
                                    {/* Quote Icon */}
                                    <div class="text-[#004225] mb-6">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="currentColor" viewBox="0 0 24 24">
                                            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
                                        </svg>
                                    </div>

                                    {/* Review Text */}
                                    <p class="text-gray-700 mb-6 leading-relaxed text-lg italic">
                                        "{review.text}"
                                    </p>

                                    {/* Star Rating */}
                                    <div class="flex text-[#004225] gap-1 mb-6">
                                        {[...Array(5)].map(() => (
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                            </svg>
                                        ))}
                                    </div>

                                    {/* Divider */}
                                    <div class="w-full h-1 bg-gradient-to-r from-[#004225] to-blue-500 rounded-full mb-6"></div>

                                    {/* Author Info */}
                                    <div>
                                        <p class="text-xl font-bold text-gray-900 mb-1">{review.author}</p>
                                        <p class="text-gray-600 font-medium">{review.project}</p>
                                    </div>
                                </div>
                            </div>
                        ))}
                    </div>
                </section>
            </div>
        </section>
    </main>

    <Footer />
</Layout>

<style>
    /* Enhanced animations */
    @keyframes slideUp {
        0% {
            opacity: 0;
            transform: translateY(50px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .scroll-animate-up {
        will-change: transform, opacity;
        opacity: 0;
        transform: translateY(50px);
