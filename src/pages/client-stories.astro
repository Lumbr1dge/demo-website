    const highlightText = (text: string) => {
    const keywords = [
        'excellent', 'professional', 'quality', 'attention to detail',
        'communication', 'schedule', 'on time', 'clean', 'tidy',
        'recommend', 'great job', 'very pleased', 'flexible',
        'reasonable', 'prompt', 'completed', 'high standard',
        'workmanship', 'honest', 'reliable', 'impressed', 'helpful',
        'knowledgeable', 'informed', 'updates', 'progress'
    ];
    
    return text.split(' ').map(word => {
        const lowerWord = word.toLowerCase();
        return keywords.some(keyword => 
            lowerWord.includes(keyword.toLowerCase())
        ) ? `<span class="text-[#004225] font-medium">${word}</span>` : word;
    }).join(' ');
};
