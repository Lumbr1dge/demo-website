---
import Footer from '../components/Footer.astro';
import Layout from '../layouts/Layout.astro';
import NavBar from '../components/NavBar.astro';
const currentPath = Astro.url.pathname;
---

<Layout title="Contact Us - Draft & Build">
    <NavBar currentPath={currentPath} />
    
    <main class="min-h-screen bg-gradient-to-br from-white via-gray-50 to-gray-100 relative overflow-hidden page-fade-in">
        {/* Animated Background Patterns */}
        <div class="absolute top-40 -left-64 w-96 h-96 bg-gradient-to-r from-[#004225]/10 to-[#004225]/10 rounded-full blur-3xl animate-blob opacity-0 animate-fade-in" style="animation-delay: 200ms;"></div>
        <div class="absolute top-96 -right-64 w-96 h-96 bg-gradient-to-l from-[#004225]/10 to-[#004225]/10 rounded-full blur-3xl animate-blob animation-delay-2000 opacity-0 animate-fade-in" style="animation-delay: 400ms;"></div>
        <div class="absolute bottom-40 -left-64 w-96 h-96 bg-gradient-to-tr from-[#004225]/10 to-[#004225]/10 rounded-full blur-3xl animate-blob animation-delay-4000 opacity-0 animate-fade-in" style="animation-delay: 600ms;"></div>
        <div class="absolute -bottom-32 right-32 w-96 h-96 bg-gradient-to-tl from-[#004225]/10 to-[#004225]/10 rounded-full blur-3xl animate-blob animation-delay-6000 opacity-0 animate-fade-in" style="animation-delay: 800ms;"></div>

        {/* Hero Image Section */}
        <section class="pt-24 sm:pt-32 px-4">
            <div class="max-w-7xl mx-auto">
                <div class="relative w-full h-[200px] sm:h-[250px] md:h-[350px] rounded-3xl shadow-2xl mb-6 overflow-hidden">
                    <img 
                        src="/ContactUs.jpeg" 
                        alt="Contact Us Hero" 
                        class="w-full h-full object-cover object-center"
                        loading="eager"
                    />
                    <div class="absolute inset-0 bg-gradient-to-b from-black/10 via-black/20 to-black/40"></div>
                </div>
            </div>
        </section>

        {/* Contact Section */}
        <section class="pb-16 sm:pb-24 px-4">
            <div class="max-w-7xl mx-auto">
                <div class="bg-white/90 backdrop-blur-xl rounded-3xl p-6 sm:p-8 border-2 border-gray-200/50 shadow-2xl relative overflow-hidden">
                    {/* Background Patterns */}
                    <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-br from-[#004225]/5 via-[#004225]/3 to-transparent rounded-full blur-3xl"></div>
                    <div class="absolute bottom-0 left-0 w-96 h-96 bg-gradient-to-tr from-[#004225]/5 via-[#004225]/3 to-transparent rounded-full blur-3xl"></div>
                    
                    <div class="text-center mb-12 sm:mb-16 relative">
                        {/* Title container */}
                        <div class="relative inline-flex flex-col items-center gap-2 sm:gap-4 animate-slide-in-left">
                            <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-center relative text-[#004225]">
                                Contact Us
                            </h1>
                            <div class="h-1 w-32 sm:w-40 bg-[#004225] rounded-full mt-2"></div>
                            <p class="text-base sm:text-lg text-black mt-4">Let's Build Something Amazing Together</p>
                        </div>
                    </div>

                    {/* Contact Content */}
                    <div class="grid md:grid-cols-2 gap-6 sm:gap-12">
                        {/* Left Side - Contact Details */}
                        <div id="getInTouch" class="h-full">
                            <div class="bg-[#004225] p-[1px] rounded-2xl h-full shadow-lg">
                                <div class="bg-white rounded-2xl p-6 sm:p-8 h-full flex flex-col relative overflow-hidden">
                                    {/* Background Pattern */}
                                    <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-[#004225]/5 to-transparent rounded-full blur-2xl"></div>
                                    <div class="absolute bottom-0 left-0 w-40 h-40 bg-gradient-to-tr from-[#004225]/5 to-transparent rounded-full blur-2xl"></div>

                                    <h2 class="text-2xl sm:text-3xl font-bold mb-6 sm:mb-8 text-[#004225] relative">
                                        Get in Touch
                                        <div class="w-20 h-1 bg-[#004225] mt-2 rounded-full"></div>
                                    </h2>

                                    <div class="space-y-6 sm:space-y-8 flex-grow relative">
                                        {/* Phone */}
                                        <div>
                                            <div class="flex items-start space-x-4 p-4 rounded-lg">
                                                <div class="text-[#004225] bg-[#004225]/10 p-3 rounded-lg">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                                    </svg>
                                                </div>
                                                <div>
                                                    <h3 class="font-semibold text-lg text-[#004225]">Phone</h3>
                                                    <p class="text-black">+64 27 123 4567</p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="w-full h-px bg-gradient-to-r from-transparent via-[#004225]/20 to-transparent"></div>

                                        {/* Email */}
                                        <div>
                                            <div class="flex items-start space-x-4 p-4 rounded-lg">
                                                <div class="text-[#004225] bg-[#004225]/10 p-3 rounded-lg">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                                    </svg>
                                                </div>
                                                <div>
                                                    <h3 class="font-semibold text-lg text-[#004225]">Email</h3>
                                                    <p class="text-black">info@draftandbuild.co.nz</p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="w-full h-px bg-gradient-to-r from-transparent via-[#004225]/20 to-transparent"></div>

                                        {/* Location */}
                                        <div>
                                            <div class="flex items-start space-x-4 p-4 rounded-lg">
                                                <div class="text-[#004225] bg-[#004225]/10 p-3 rounded-lg">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                                    </svg>
                                                </div>
                                                <div>
                                                    <h3 class="font-semibold text-lg text-[#004225]">Location</h3>
                                                    <p class="text-black">Auckland, New Zealand</p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="w-full h-px bg-gradient-to-r from-transparent via-[#004225]/20 to-transparent"></div>

                                        {/* Hours */}
                                        <div>
                                            <div class="flex items-start space-x-4 p-4 rounded-lg">
                                                <div class="text-[#004225] bg-[#004225]/10 p-3 rounded-lg">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                    </svg>
                                                </div>
                                                <div>
                                                    <h3 class="font-semibold text-lg text-[#004225]">Hours</h3>
                                                    <p class="text-black">Mon - Fri: 8:00 AM - 5:00 PM</p>
                                                    <p class="text-black">Sat - Sun: By Appointment</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {/* Right Side - Contact Form */}
                        <div id="sendMessage" class="h-full">
                            <div class="bg-[#004225] p-[1px] rounded-2xl h-full shadow-lg">
                                <div class="bg-white rounded-2xl p-8 h-full flex flex-col">
                                    <h2 class="text-3xl font-bold mb-6 text-[#004225]">Send Us a Message</h2>
                                    <form class="space-y-6 flex-grow">
                                        <div class="grid md:grid-cols-2 gap-6">
                                            <div>
                                                <label class="block text-black font-medium mb-2" for="name">Name</label>
                                                <input type="text" id="name" name="name" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-[#004225] focus:ring-2 focus:ring-[#004225]/20 outline-none" required>
                                            </div>
                                            <div>
                                                <label class="block text-black font-medium mb-2" for="email">Email</label>
                                                <input type="email" id="email" name="email" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-[#004225] focus:ring-2 focus:ring-[#004225]/20 outline-none" required>
                                            </div>
                                        </div>
                                        <div>
                                            <label class="block text-black font-medium mb-2" for="phone">Phone</label>
                                            <input type="tel" id="phone" name="phone" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-[#004225] focus:ring-2 focus:ring-[#004225]/20 outline-none" required>
                                        </div>
                                        <div>
                                            <label class="block text-black font-medium mb-2" for="message">Message</label>
                                            <textarea id="message" name="message" rows="4" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-[#004225] focus:ring-2 focus:ring-[#004225]/20 outline-none resize-none" required></textarea>
                                        </div>
                                        <button type="submit" class="w-full text-white bg-[#004225] hover:bg-[#004225]/90 rounded-lg px-6 py-3 text-lg font-medium flex items-center justify-center">
                                            <span>Send Message</span>
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                                            </svg>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer />
</Layout>

<style>
    .shadow-3xl {
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .page-fade-in {
        opacity: 0;
        animation: fadeIn 1s ease-out forwards;
    }

    @keyframes blob {
        0% {
            transform: translate(0px, 0px) scale(1);
        }
        33% {
            transform: translate(30px, -50px) scale(1.1);
        }
        66% {
            transform: translate(-20px, 20px) scale(0.9);
        }
        100% {
            transform: translate(0px, 0px) scale(1);
        }
    }

    .animate-blob {
        animation: blob 7s infinite;
    }

    .animation-delay-2000 {
        animation-delay: 2s;
    }

    .animation-delay-4000 {
        animation-delay: 4s;
    }

    .animation-delay-6000 {
        animation-delay: 6s;
    }

    @keyframes slideUp {
        0% {
            opacity: 0;
            transform: translateY(50px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fadeSlide {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }

    }

    .animate-fade-slide {
        opacity: 0;
        animation: fadeSlide 0.8s ease-out forwards;
    }

    .scroll-animate-up {
        will-change: transform, opacity;
        opacity: 0;
        transform: translateY(50px);
    }

    @keyframes highlight-box {
        0% {
            box-shadow: 0 0 0 0 rgba(178, 34, 34, 0);
        }
        50% {
            box-shadow: 0 0 30px 10px rgba(178, 34, 34, 0.4);
        }
        100% {
            box-shadow: 0 0 0 0 rgba(178, 34, 34, 0);
        }
    }

    .highlight-box {
        animation: highlight-box 3s ease-in-out;
    }

    @keyframes slide-right {
        0% { transform: translateX(-100%); }
        100% { transform: translateX(100%); }
    }

    .animate-slide-right {
        animation: slide-right 2s ease-in-out infinite;
    }

    .delay-150 {
        animation-delay: 150ms;
    }
</style>

<script>
    // Force scroll to top immediately when script loads
    if (typeof window !== 'undefined') {
        window.scrollTo(0, 0);
    }

    document.addEventListener('DOMContentLoaded', () => {
        const hash = window.location.hash;
        if (hash) {
            setTimeout(() => {
                const element = document.querySelector(hash) as HTMLElement;
                if (element) {
                    // Add highlight class
                    element.classList.add('highlight-box');
                    
                    // Remove highlight class after animation
                    setTimeout(() => {
                        element.classList.remove('highlight-box');
                    }, 3000);

                    // Calculate the element's position
                    const headerHeight = 100; // Height of your fixed header
                    const padding = 20; // Additional padding
                    const elementPosition = element.getBoundingClientRect().top + window.pageYOffset;
                    const offsetPosition = elementPosition - headerHeight - padding;

                    // Smooth scroll to element
                    window.scrollTo({
                        top: offsetPosition,
                        behavior: 'smooth'
                    });
                }
            }, 500); // Delay to ensure page is loaded
        }
    });
</script> 