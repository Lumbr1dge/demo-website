---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Our Services - Wolf Construction Ltd | Construction & Building Services Auckland">
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-background"></div>
        <div class="hero-content">
            <div class="container">
                <div class="hero-text">
                    <span class="hero-badge">Professional Construction Services</span>
                    <h1 class="hero-title">Building Excellence Across Auckland</h1>
                    <p class="hero-subtitle">From residential homes to commercial spaces, we deliver quality construction solutions tailored to your vision and needs.</p>
                    
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Service Section -->
    <section class="featured-service">
        <div class="container">
            <div class="featured-content">
                <div class="featured-text">
                    <div class="section-header">
                        <span class="section-badge">Featured Service</span>
                        <h2 class="section-title">New Home Construction</h2>
                    </div>
                    <p class="featured-description">
                        We build high-quality, durable homes designed for modern living. From single-family houses to multi-unit developments, we deliver comfort, functionality, and style.
                    </p>
                    <div class="benefits-list">
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                            <span>Custom floor plans tailored to your needs</span>
                        </div>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                            <span>Energy-efficient materials and sustainable practices</span>
                        </div>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                            <span>Full compliance with building codes and safety standards</span>
                        </div>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                            <span>Transparent cost estimates and timelines</span>
                        </div>
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                            <span>Added long-term property value</span>
                        </div>
                    </div>
                    <a href="/contact" class="featured-btn">Start Your Project</a>
                </div>
                <div class="featured-visual">
                    <div class="featured-image">
                        <img src="/New-House-Build-1.jpg" alt="New Home Construction" class="service-image">
                        <div class="image-overlay">
                            <div class="overlay-content">
                                <h3>Quality Construction</h3>
                                <p>Built to last a lifetime</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Our Services Grid -->
    <section class="services-section">
        <div class="container">
            <div class="section-header text-center">
                <span class="section-badge">What We Do</span>
                <h2 class="section-title">Our Construction Services</h2>
                <p class="section-subtitle">Comprehensive building solutions delivered by experienced professionals</p>
            </div>
            
            <div class="services-grid">
                <div class="service-card">
                    <div class="service-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </svg>
                    </div>
                    <h3>Residential Construction</h3>
                    <p>Building high-quality homes, from single-family houses to multi-unit developments, tailored to client needs with a focus on durability, comfort, and modern design.</p>
                    <div class="service-features">
                        <span>Custom Homes</span>
                        <span>Multi-Unit Developments</span>
                        <span>Modern Design</span>
                    </div>
                </div>

                <div class="service-card">
                    <div class="service-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </svg>
                    </div>
                    <h3>Commercial Construction</h3>
                    <p>Delivering offices, retail spaces, and industrial facilities that combine functionality with aesthetic appeal, ensuring projects meet safety and compliance standards.</p>
                    <div class="service-features">
                        <span>Office Buildings</span>
                        <span>Retail Spaces</span>
                        <span>Industrial Facilities</span>
                    </div>
                </div>

                <div class="service-card">
                    <div class="service-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                    </div>
                    <h3>Renovations & Remodeling</h3>
                    <p>Upgrading existing properties through structural improvements, layout redesigns, and modern finishes to increase value and usability.</p>
                    <div class="service-features">
                        <span>Kitchen Renovations</span>
                        <span>Bathroom Remodeling</span>
                        <span>Home Extensions</span>
                    </div>
                </div>

                <div class="service-card">
                    <div class="service-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v6a2 2 0 002 2h2m0-8h2m-2 0V3m0 2h2m-2 0v6m2-6h2a2 2 0 012 2v6a2 2 0 01-2 2h-2m0-8v8"/>
                        </svg>
                    </div>
                    <h3>Project Management</h3>
                    <p>Comprehensive oversight from planning to completion, ensuring projects are delivered on time, within budget, and to the highest standards.</p>
                    <div class="service-features">
                        <span>Timeline Management</span>
                        <span>Budget Control</span>
                        <span>Quality Assurance</span>
                    </div>
                </div>

                <div class="service-card">
                    <div class="service-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
                        </svg>
                    </div>
                    <h3>Civil & Infrastructure Works</h3>
                    <p>Executing large-scale projects such as roads, drainage systems, and foundations, with a focus on long-lasting, reliable construction.</p>
                    <div class="service-features">
                        <span>Road Construction</span>
                        <span>Drainage Systems</span>
                        <span>Foundation Work</span>
                    </div>
                </div>

                <div class="service-card">
                    <div class="service-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"/>
                        </svg>
                    </div>
                    <h3>Custom Design & Build</h3>
                    <p>Offering tailored solutions that take clients' ideas from concept to reality, including architectural design, planning approvals, and turnkey delivery.</p>
                    <div class="service-features">
                        <span>Architectural Design</span>
                        <span>Planning Approvals</span>
                        <span>Turnkey Delivery</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Process Section -->
    <section class="process-section">
        <div class="container">
            <div class="section-header text-center">
                <span class="section-badge">Our Process</span>
                <h2 class="section-title">How We Work</h2>
                <p class="section-subtitle">A proven 4-step process that ensures quality results every time</p>
            </div>
            
            <div class="process-timeline">
                <div class="process-step">
                    <div class="step-number">01</div>
                    <div class="step-content">
                        <h3>Consultation & Planning</h3>
                        <p>We discuss your vision, budget, and timeline to understand your exact requirements and create a detailed project plan.</p>
                    </div>
                    <div class="step-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                        </svg>
                    </div>
                </div>

                <div class="process-step">
                    <div class="step-number">02</div>
                    <div class="step-content">
                        <h3>Design & Approvals</h3>
                        <p>Our architects create detailed plans and secure all necessary permits and approvals before construction begins.</p>
                    </div>
                    <div class="step-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                    </div>
                </div>

                <div class="process-step">
                    <div class="step-number">03</div>
                    <div class="step-content">
                        <h3>Construction</h3>
                        <p>Our skilled teams carry out the build using quality materials and proven construction methods, with regular progress updates.</p>
                    </div>
                    <div class="step-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
                        </svg>
                    </div>
                </div>

                <div class="process-step">
                    <div class="step-number">04</div>
                    <div class="step-content">
                        <h3>Final Inspection & Handover</h3>
                        <p>We ensure everything meets the highest standards through thorough inspections before handing over your completed project.</p>
                    </div>
                    <div class="step-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="why-choose-section">
        <div class="container">
            <div class="why-choose-content">
                <div class="why-choose-text">
                    <div class="section-header">
                        <span class="section-badge">Why Choose Us</span>
                        <h2 class="section-title">Built on Trust & Quality</h2>
                    </div>
                    <p class="why-choose-description">
                        With over 15 years of experience in Auckland's construction industry, we've built our reputation on delivering exceptional results that stand the test of time.
                    </p>
                    
                    <div class="guarantee-items">
                        <div class="guarantee-item">
                            <div class="guarantee-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                                </svg>
                            </div>
                            <div class="guarantee-content">
                                <h4>Licensed & Insured</h4>
                                <p>Full LBP certification and comprehensive insurance coverage</p>
                            </div>
                        </div>
                        <div class="guarantee-item">
                            <div class="guarantee-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                            <div class="guarantee-content">
                                <h4>On-Time Delivery</h4>
                                <p>Proven track record of completing projects on schedule</p>
                            </div>
                        </div>
                        <div class="guarantee-item">
                            <div class="guarantee-icon">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                                </svg>
                            </div>
                            <div class="guarantee-content">
                                <h4>Transparent Pricing</h4>
                                <p>No hidden costs - detailed quotes and regular updates</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="why-choose-visual">
                    <div class="trust-image">
                        <img src="/AboutUs2.jpg" alt="Trust and Partnership Handshake" class="handshake-img">
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>

<style>
    /* CSS Variables */
    :root {
        --primary-color: #004225;
        --primary-light: #006837;
        --secondary-color: #3b82f6;
        --accent-color: #10b981;
        --text-dark: #111827;
        --text-medium: #4b5563;
        --text-light: #6b7280;
        --white: #ffffff;
        --gray-50: #f9fafb;
        --gray-100: #f3f4f6;
        --gray-200: #e5e7eb;
        --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    }

    /* Global Styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    /* Section Headers */
    .section-header {
        margin-bottom: 3rem;
    }

    .section-header.text-center {
        text-align: center;
    }

    .section-badge {
        display: inline-block;
        background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
        color: var(--white);
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-size: 0.875rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 1rem;
    }

    .section-title {
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        font-weight: 900;
        line-height: 1.1;
        color: var(--text-dark);
        margin-bottom: 1rem;
    }

    .section-subtitle {
        font-size: 1.25rem;
        color: var(--text-medium);
        max-width: 600px;
        margin: 0 auto;
    }

    /* Hero Section */
    .hero-section {
        position: relative;
        height: calc(100dvh - 148px);
        height: calc(100svh - 148px);
        height: calc(-webkit-fill-available - 148px);
        height: calc(100vh - 148px); /* fallback */
        min-height: 500px;
        display: flex;
        align-items: center;
        overflow: hidden;
        background-color: #162539; /* Fallback background color */
    }

    .hero-background {
        position: absolute;
        inset: 0;
        background: url('/ServicesPage/Hero-Background-servicespage.jpg') center/cover;
    }

    .hero-content {
        position: relative;
        z-index: 2;
        width: 100%;
    }

    .hero-text {
        text-align: center;
        color: var(--white);
        max-width: 800px;
        margin: 0 auto;
    }

    .hero-badge {
        display: inline-block;
        background: var(--primary-color);
        color: var(--white);
        padding: 0.75rem 1.5rem;
        border-radius: 2rem;
        font-size: 0.875rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 1.5rem;
    }

    .hero-title {
        font-size: clamp(3rem, 8vw, 5rem);
        font-weight: 900;
        line-height: 1.1;
        margin-bottom: 1.5rem;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }

    .hero-subtitle {
        font-size: clamp(1.25rem, 3vw, 1.5rem);
        margin-bottom: 3rem;
        line-height: 1.6;
    }

    .hero-stats {
        display: flex;
        justify-content: center;
        gap: 3rem;
        flex-wrap: wrap;
    }

    .stat-item {
        text-align: center;
        background: rgba(255, 255, 255, 0.1);
        padding: 1.5rem 2rem;
        border-radius: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 900;
        line-height: 1;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        font-size: 0.875rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    /* Featured Service Section */
    .featured-service {
        padding: 6rem 0;
        background: var(--gray-50);
    }

    .featured-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
    }

    .featured-description {
        font-size: 1.25rem;
        line-height: 1.7;
        color: var(--text-dark);
        margin-bottom: 2rem;
    }

    .benefits-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 2.5rem;
    }

    .benefit-item {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .benefit-icon {
        width: 1.5rem;
        height: 1.5rem;
        color: var(--accent-color);
        flex-shrink: 0;
    }

    .benefit-item span {
        font-size: 1.125rem;
        color: var(--text-medium);
    }

    .featured-btn {
        display: inline-block;
        background: var(--primary-color);
        color: var(--white);
        padding: 1rem 2rem;
        border-radius: 0.75rem;
        text-decoration: none;
        font-weight: 600;
        font-size: 1.125rem;
        transition: all 0.3s ease;
    }

    .featured-btn:hover {
        background: var(--primary-light);
        transform: translateY(-2px);
    }

    .featured-visual {
        display: flex;
        justify-content: center;
    }

    .featured-image {
        position: relative;
        border-radius: 1.5rem;
        overflow: hidden;
        box-shadow: var(--shadow-xl);
    }

    .service-image {
        width: 100%;
        height: 400px;
        object-fit: cover;
    }

    .image-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
        padding: 2rem;
        color: var(--white);
    }

    .overlay-content h3 {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .overlay-content p {
        opacity: 0.9;
    }

    /* Services Grid Section */
    .services-section {
        padding: 6rem 0;
        background: linear-gradient(135deg, rgba(255,255,255,0.95), rgba(255,255,255,0.90)), url('/ServicesPage/ServicePage-OurConstructionServices-1.jpg') center/cover;
        background-attachment: fixed;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
    }

    .service-card {
        background: var(--white);
        padding: 2.5rem 2rem;
        border-radius: 1.5rem;
        text-align: center;
        box-shadow: var(--shadow-lg);
        border: 1px solid var(--gray-200);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .service-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
