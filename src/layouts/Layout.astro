---
import '../styles/global.css';
import Navbar2 from '../components/HomePageComponents/Navbar2.astro';
import Footer from '../components/HomePageComponents/Footer.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <!-- Set ASAP so CSS can know JS is available -->
        <script>document.documentElement.classList.add('js');</script>
    </head>
    <body>
        <Navbar2 
            companyName="WOLF CONSTRUCTION LIMITED"
            email="office@wolfconstruction.co.nz"
            phone="021 023 49527"
        />
        <main>
            <slot />
        </main>
        <Footer />
        <script>
            // REMOVED ALL SCROLL ANIMATIONS - Content loads immediately
            // No animations, content is visible immediately
            
            // Remove loading states on DOM ready
            window.addEventListener('DOMContentLoaded', () =>
                requestAnimationFrame(() => document.documentElement.classList.remove('loading'))
            );
        </script>
    </body>
</html>

<style is:global>
    /* --- Modern viewport units with fallbacks --- */
    body {
        min-height: 100dvh;
        min-height: 100svh;
        min-height: -webkit-fill-available;
        min-height: 100vh; /* fallback */
    }
    
    main {
        min-height: calc(100dvh - 200px);
        min-height: calc(100svh - 200px);
        min-height: calc(-webkit-fill-available - 200px);
        min-height: calc(100vh - 200px); /* fallback */
    }

    /* Ensure proper spacing with fixed navbar */
    main {
        padding-top: 0; /* Navbar2 handles its own spacing */
        flex: 1;
    }

    /* Ensure footer stays at bottom */
    body {
        display: flex;
        flex-direction: column;
    }

    /* REMOVED ALL SCROLL ANIMATIONS - Content is immediately visible */
</style> 