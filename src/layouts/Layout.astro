---
import '../styles/global.css';
import Navbar2 from '../components/HomePageComponents/Navbar2.astro';
import Footer from '../components/HomePageComponents/Footer.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>

    </head>
    <body>
        <Navbar2 
            companyName="WOLF CONSTRUCTION LIMITED"
            email="office@wolfconstruction.co.nz"
            phone="021 023 49527"
        />
        <main>
            <slot />
        </main>
        <Footer />

    </body>
</html>

<style is:global>
    /* --- iOS dvh/svh fallbacks --- */
    @supports (height: 100dvh) {
        body { min-height: 100dvh; }
        main { min-height: calc(100dvh - 200px); }
    }
    @supports (height: 100svh) {
        body { min-height: 100svh; }
        main { min-height: calc(100svh - 200px); }
    }

    /* Ensure proper spacing with fixed navbar */
    main {
        padding-top: 0; /* Navbar2 handles its own spacing */
        /* 100vh kept as fallback; dvh/svh override above */
        min-height: calc(100vh - 200px); /* Account for navbar and footer */
    }

    /* Ensure footer stays at bottom */
    body {
        display: flex;
        flex-direction: column;
        /* 100vh fallback only; dvh/svh override above */
        min-height: 100vh;
    }

    main {
        flex: 1;
    }

    /* Content always visible - no fade-in animations */
    .scroll-animate-up {
        opacity: 1 !important;
        transform: translateY(0) !important;
        visibility: visible !important;
    }

    .scroll-animate-up.visible,
    .scroll-animate-up.in-view {
        opacity: 1 !important;
        transform: translateY(0) !important;
        visibility: visible !important;
    }

    /* Ensure all content is visible on load - Safari mobile fix */
    body * {
        opacity: 1;
        visibility: visible;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        opacity: 1;
        /* Animation removed - content shows immediately */
    }

    .animate-slide-down {
        opacity: 1;
        transform: translateY(0);
        /* Animation removed - content shows immediately */
    }
</style> 